{
  "compilerOptions": {
    "target": "es2020",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "rootDir": "./src/",
    "baseUrl": "./",
    "outDir": "./bin",
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["bin"]
}
